<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="360"
                    android:startColor="@color/DarkerRed"
                    android:centerColor="@color/DarkerOrange"
                    android:endColor="@color/DarkerRed"
                    android:type="linear" />
                <corners android:radius="5dp"/>
            </shape>
            <shape android:shape="line">

            </shape>
        </item>



        <item
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp">
            <shape android:shape="rectangle">
                <solid android:color="#737373" />
                <corners android:radius="5px"/>
            </shape>

        </item>



    </layer-list>